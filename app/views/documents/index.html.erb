<h1>Index of All Files</h1>
<p>You can view files here and download them.</p>
<table>
  <thead>
    <tr>
      <th>ID </th>
      <th>File Name </th>
      <th><th>
    </tr>
  </thead>
  <tbody>

    <% @documents.each do |document| %>
      <tr>
        <td><%= document.id%></td>
        <td><%= document.file_name%></td>
        <td><%= link_to "Download", document_path(document), data: { confirm: "Are you sure you want to download this file?" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
